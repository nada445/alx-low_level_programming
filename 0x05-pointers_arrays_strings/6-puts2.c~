#include "main.h"
/**
 * _strlen - prints out the length of the str
 * @s: str to print its size
 * Return: length of string
 */

int _strlen(char *s)
{
int i;
int counter;
counter = 0;

for (i = 0; s[i] != '\0'; i++)
{
counter++;
}

return (counter);
}

/**
 * puts2 - prints every other char of a str starting with the first char followed by a new line
 * @s: the string
 * Return: void
 */

void puts2(char *str)
{
int i;

for (i = 0; i < _strlen(s); i += 2)
{
_putchar(s[i]);
}
_putchar('\n');
}
