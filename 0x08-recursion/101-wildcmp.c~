#include <stdio.h>
/**
 * wildcmp - compare 2 strings
 * @s1: string
 * @s2: string
 * Return: 1 or 0
 */
int wildcmp(char *s1, char *s2)
{
if (*s2 == '*' && *(s2 + 1) != '\0' && *s1 == '\0')
return (0);
if (*s2 == '\0' && *s1 == '\0')
return (1);
if (*s1 == *s2 || *s2 == '*')
{
if (*s2 == '*')
return (wildcmp(s1, s2 + 1 )|| wildcmp( s1 + 1, s2));
else
return (wildcmp(s1 + 1, s2 + 1));
}
return (0);
}
